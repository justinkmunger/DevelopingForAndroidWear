<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justintomobile.developingforandroidwear">

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light">
        <activity
            android:name="android.support.wearable.activity.ConfirmationActivity" />
        <activity
            android:name=".activity.wearableapps.BoxInsetLayoutActivity"
            android:label="Box Inset Layout">
        </activity>
        <activity
            android:name=".activity.wearableapps.ConfirmationTestActivity"
            android:label="Confirmation Test">
