            android:taskAffinity="" />
        <activity
            android:name=".activity.notifications.MediumContentActivity"
            android:exported="true"
            android:allowEmbedded="true"
            android:label="@string/app_name"
            android:taskAffinity="" />
        <activity
            android:name=".activity.notifications.LargeContentActivity"
            android:exported="true"
            android:allowEmbedded="true"
            android:label="@string/app_name"
            android:taskAffinity="" />
        <activity
            android:name=".activity.notifications.FullScreenContentActivity"
            android:exported="true"
            android:allowEmbedded="true"
            android:label="@string/app_name"
            android:taskAffinity="" />
