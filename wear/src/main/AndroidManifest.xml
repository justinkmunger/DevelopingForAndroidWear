        <activity
            android:name=".activity.wearableapps.DismissOverlayViewActivity"
            android:label="DismissOverlayView"
            android:theme="@style/WearTheme" />
        <activity
            android:name=".activity.wearableapps.FragmentGridViewPagerActivity"
            android:label="Fragment GridView Pager" />
        <activity
            android:name=".activity.wearableapps.GridViewPagerActivity"
            android:label="GridView Pager"/>
        <activity
            android:name=".activity.wearableapps.MyInsetActivity"
            android:label="InsetActivity" />
        <activity
            android:name=".activity.NotificationsActivity"
            android:label="Notifications">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WearableAppsActivity"
            android:label="Wearable Apps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.wearableapps.WearViewStubActivity"
            android:label="WearViewStub" />
        <activity
            android:name=".activity.notifications.DisplayIntentActivity"
            android:exported="true"
